header
	hideselect()
	position sticky
	position -webkit-sticky
	top 0
	left 0
	width 100%
	border-bottom 1px solid
	// filter: drop-shadow(0 0 1.1rem alpha($secondary, 0.3))
	display flex
	// grid-template-columns 1fr
	align-items center
	justify-content center
	background var(--bg-color)
	z-index 200
	h1
		display none
	#site-title
		height ($font*4)
		padding $padding 0
		justify-self center
		pointer-events none
		svg
			display block
			height 100%
			width auto
			path
				fill currentColor
	#previous-post, #next-post
		// visibility hidden
	#previous-post
		justify-self start
	#next-post
		justify-self end

body.menu-visible
	header #site-title
		pointer-events auto

