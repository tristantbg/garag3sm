#post-header
	text-align center
	margin ($font-heading+$font*2) 0
	#post-date
		margin-bottom 1em

#post-hero, #post-description
	margin-bottom $spacebetween

#post-description
	position relative
	h2
		link()

#post-captions
	span(2/12)
	line-height 1.3
	+above($md + 1)
		position absolute
		right 0
	+below($md)
		stack()
		margin-top $spacebetween
	& > *:not(:last-child)
		margin-bottom 1em