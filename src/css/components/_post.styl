#post-header
	text-align center
	margin ($font-heading+$font*2) 0
	#post-date
		margin-bottom 1em
	#post-category
		text-decoration underline
		text-decoration-skip ink
	.title
		small
			&::after
				content '\0000A0'
			+above($md + 1)
				font-size 3rem
				position relative
				top -0.5em
				&::after
					content '\0000A0\0000A0'
	.serif.condensed
		small
			font-size 3rem

.mn-90vh
	min-height 90vh

#post-hero, #post-description
	margin-bottom $spacebetween

#post-description
	position relative
	+above($md + 1)
		move(-2/12, $col-or-span: span)
	.post-text
		+below($md)
			margin-top $spacebetween

#post-captions
	span(2/12)
	line-height 1.3
	+above($md + 1)
		move(12/12, $col-or-span: span)
	+below($md)
		stack()
	#main-caption
		margin-bottom 3em
	.additional-caption
		margin-bottom 1em
		.sans-serif
			margin-bottom .2em
		&:nth-last-child(2)
			margin-bottom 3em
	.share-buttons
		.sans-serif::after
			content ':'
		